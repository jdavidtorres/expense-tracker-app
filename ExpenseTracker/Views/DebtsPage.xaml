<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ExpenseTracker.ViewModels"
             xmlns:models="clr-namespace:ExpenseTracker.Models"
             x:Class="ExpenseTracker.Views.DebtsPage"
             Title="Debts">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Command="{Binding NavigateToAddDebtCommand}" IconImageSource="add.png" />
    </ContentPage.ToolbarItems>
    <Grid>
        <ActivityIndicator IsVisible="{Binding IsLoading}" IsRunning="{Binding IsLoading}" VerticalOptions="Center" HorizontalOptions="Center" />
        <RefreshView IsRefreshing="{Binding IsLoading}" Command="{Binding LoadDebtsCommand}" IsVisible="{Binding IsNotLoading}">
            <CollectionView ItemsSource="{Binding Debts}" BackgroundColor="#F0F0F0">
                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="50">
                        <Label Text="No debts found" FontSize="18" TextColor="Gray" HorizontalTextAlignment="Center" />
                        <Button Text="Add Debt" Command="{Binding NavigateToAddDebtCommand}" Margin="0,20,0,0" />
                    </StackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Debt">
                        <Frame Margin="10,5" Padding="15" CornerRadius="10" HasShadow="True">
                            <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*, Auto">
                                <StackLayout Grid.Column="0">
                                    <Label Text="{Binding Source}" FontSize="18" FontAttributes="Bold" />
                                    <Label Text="{Binding DueDate, StringFormat='Due: {0:MMM dd, yyyy}'}" TextColor="Gray" FontSize="12" />
                                    <Label Text="{Binding Status}" TextColor="{Binding Status, Converter={StaticResource StatusColorConverter}}" FontSize="12" />
                                </StackLayout>
                                <Label Grid.Column="1" Text="{Binding Amount, StringFormat='{0:C}'}" FontSize="18" FontAttributes="Bold" VerticalOptions="Center" TextColor="{Binding IsOwedToMe, Converter={StaticResource DebtColorConverter}}" />
                                <StackLayout Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalOptions="End" Margin="0,10,0,0">
                                    <Button Text="Edit" Command="{Binding Source={RelativeSource AncestorType={x:Type vm:DebtsViewModel}}, Path=NavigateToEditDebtCommand}" CommandParameter="{Binding .}" FontSize="12" HeightRequest="35" Margin="5,0" />
                                    <Button Text="Delete" Command="{Binding Source={RelativeSource AncestorType={x:Type vm:DebtsViewModel}}, Path=DeleteDebtCommand}" CommandParameter="{Binding Id}" BackgroundColor="Red" TextColor="White" FontSize="12" HeightRequest="35" />
                                </StackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>
