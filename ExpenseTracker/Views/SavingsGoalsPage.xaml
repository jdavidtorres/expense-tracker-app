<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ExpenseTracker.ViewModels"
             xmlns:models="clr-namespace:ExpenseTracker.Models"
             x:Class="ExpenseTracker.Views.SavingsGoalsPage"
             Title="Savings Goals">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Command="{Binding NavigateToAddSavingsGoalCommand}" IconImageSource="add.png" />
    </ContentPage.ToolbarItems>
    <Grid>
        <ActivityIndicator IsVisible="{Binding IsLoading}" IsRunning="{Binding IsLoading}" VerticalOptions="Center" HorizontalOptions="Center" />
        <RefreshView IsRefreshing="{Binding IsLoading}" Command="{Binding LoadSavingsGoalsCommand}" IsVisible="{Binding IsNotLoading}">
            <CollectionView ItemsSource="{Binding SavingsGoals}" BackgroundColor="#F0F0F0">
                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="50">
                        <Label Text="No savings goals found" FontSize="18" TextColor="Gray" HorizontalTextAlignment="Center" />
                        <Button Text="Start Saving" Command="{Binding NavigateToAddSavingsGoalCommand}" Margin="0,20,0,0" />
                    </StackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:SavingsGoal">
                        <Frame Margin="10,5" Padding="15" CornerRadius="10" HasShadow="True">
                            <Grid RowDefinitions="Auto, Auto, Auto" ColumnDefinitions="*, Auto">
                                <Label Grid.Column="0" Text="{Binding Name}" FontSize="18" FontAttributes="Bold" />
                                <Label Grid.Column="1" Text="{Binding CurrentAmount, StringFormat='{0:C}'}" FontSize="18" FontAttributes="Bold" TextColor="Green" HorizontalOptions="End" />
                                
                                <ProgressBar Grid.Row="1" Grid.ColumnSpan="2" Progress="{Binding Progress}" ProgressColor="Green" Margin="0,10" />
                                
                                <Label Grid.Row="2" Grid.Column="0" Text="{Binding Deadline, StringFormat='Target: {0:MMM dd, yyyy}'}" TextColor="Gray" FontSize="12" />
                                <Label Grid.Row="2" Grid.Column="1" Text="{Binding TargetAmount, StringFormat='Goal: {0:C}'}" TextColor="Gray" FontSize="12" HorizontalOptions="End" />
                                
                                <StackLayout Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalOptions="End" Margin="0,30,0,0" IsVisible="False">
                                     <!-- Edit/Delete buttons logic or tap gesture can be added here if not using swipe -->
                                </StackLayout>
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SavingsGoalsViewModel}}, Path=NavigateToEditSavingsGoalCommand}" CommandParameter="{Binding .}" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>
