<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ExpenseTracker.ViewModels"
             xmlns:models="clr-namespace:ExpenseTracker.Models"
             x:Class="ExpenseTracker.Views.SubscriptionsPage"
             Title="{Binding Title}">



    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add"
                     Command="{Binding AddSubscriptionCommand}"
                     IconImageSource="add.png"/>
        <ToolbarItem Text="Refresh"
                     Command="{Binding RefreshCommand}"
                     IconImageSource="refresh.png"/>
    </ContentPage.ToolbarItems>

    <Grid>
        <!-- Loading indicator -->
        <ActivityIndicator IsVisible="{Binding IsLoading}"
                           IsRunning="{Binding IsLoading}"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"/>

        <!-- Error message -->
        <Frame IsVisible="{Binding HasError}"
               BackgroundColor="Red"
               Padding="16"
               Margin="16"
               VerticalOptions="Start">
            <Label Text="{Binding ErrorMessage}"
                   TextColor="White"
                   HorizontalTextAlignment="Center"/>
        </Frame>

        <!-- Content -->
        <RefreshView IsRefreshing="{Binding IsLoading}"
                     Command="{Binding RefreshCommand}"
                     IsVisible="{Binding IsNotLoading}">
            <CollectionView ItemsSource="{Binding Subscriptions}"
                            BackgroundColor="LightGray">
                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="Center"
                            HorizontalOptions="Center"
                            Padding="50">
                        <Label Text="No subscriptions found"
                               FontSize="18"
                               TextColor="Gray"
                               HorizontalTextAlignment="Center"/>
                        <Button Text="Add Your First Subscription"
                                Command="{Binding AddSubscriptionCommand}"
                                BackgroundColor="Blue"
                                TextColor="White"
                                Margin="0,20,0,0"/>
                    </StackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Subscription">
                        <Grid Padding="16"
                                RowDefinitions="Auto,Auto,Auto"
                                ColumnDefinitions="*,Auto,Auto">
                            <!-- Background frame -->
                            <Frame Grid.RowSpan="3"
                                    Grid.ColumnSpan="3"
                                   BackgroundColor="White"
                                   CornerRadius="8"
                                   Padding="16"
                                   Margin="8,4,8,4"
                                   HasShadow="True">
                                <Grid RowDefinitions="Auto,Auto,Auto"
                                        ColumnDefinitions="*,Auto,Auto">

                                    <!-- Subscription Name and Provider -->
                                    <StackLayout Grid.Row="0"
                                            Grid.Column="0">
                                        <Label Text="{Binding Name}"
                                               FontSize="18"
                                               FontAttributes="Bold"/>
                                        <Label Text="{Binding Provider}"
                                               FontSize="14"
                                               TextColor="Gray"/>
                                    </StackLayout>

                                    <!-- Amount -->
                                    <Label Grid.Row="0"
                                            Grid.Column="1"
                                           Text="{Binding Amount, StringFormat='{0:C}'}"
                                           FontSize="20"
                                           FontAttributes="Bold"
                                           VerticalOptions="Center"
                                           HorizontalOptions="End"/>

                                    <!-- Status indicator -->
                                    <Frame Grid.Row="0"
                                            Grid.Column="2"
                                           WidthRequest="12"
                                           HeightRequest="12"
                                           CornerRadius="6"
                                           Padding="0"
                                           VerticalOptions="Center"
                                           HorizontalOptions="End"
                                           Margin="10,0,0,0">
                                        <Frame.Triggers>
                                            <DataTrigger TargetType="Frame"
                                                    Binding="{Binding IsActive}"
                                                    Value="True">
                                                <Setter Property="BackgroundColor"
                                                        Value="Green"/>
                                            </DataTrigger>
                                            <DataTrigger TargetType="Frame"
                                                    Binding="{Binding IsActive}"
                                                    Value="False">
                                                <Setter Property="BackgroundColor"
                                                        Value="Red"/>
                                            </DataTrigger>
                                        </Frame.Triggers>
                                    </Frame>

                                    <!-- Billing cycle and next billing date -->
                                    <StackLayout Grid.Row="1"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="2"
                                            Orientation="Horizontal"
                                            Margin="0,8,0,0">
                                        <Label Text="{Binding BillingCycle}"
                                               FontSize="12"
                                               TextColor="Gray"/>
                                        <Label Text="â€¢"
                                               FontSize="12"
                                               TextColor="Gray"
                                               Margin="8,0"/>
                                        <Label Text="{Binding NextBillingDate, StringFormat='Next: {0:MMM dd}'}"
                                               FontSize="12"
                                               TextColor="Gray"/>
                                    </StackLayout>

                                    <!-- Action buttons -->
                                    <StackLayout Grid.Row="2"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="3"
                                                 Orientation="Horizontal"
                                                 HorizontalOptions="End"
                                                 Margin="0,8,0,0">
                                        <Button Text="Toggle"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SubscriptionsViewModel}}, Path=ToggleSubscriptionStatusCommand}"
                                                CommandParameter="{Binding .}"
                                                FontSize="12"
                                                Padding="12,4"
                                                CornerRadius="4"
                                                BackgroundColor="Orange"
                                                TextColor="White"/>

                                        <Button Text="Edit"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SubscriptionsViewModel}}, Path=EditSubscriptionCommand}"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="Blue"
                                                TextColor="White"
                                                FontSize="12"
                                                Padding="12,4"
                                                CornerRadius="4"
                                                Margin="8,0,0,0"/>

                                        <Button Text="Delete"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SubscriptionsViewModel}}, Path=DeleteSubscriptionCommand}"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="Red"
                                                TextColor="White"
                                                FontSize="12"
                                                Padding="12,4"
                                                CornerRadius="4"
                                                Margin="8,0,0,0"/>
                                    </StackLayout>
                                </Grid>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>
