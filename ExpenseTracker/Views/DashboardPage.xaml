<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ExpenseTracker.ViewModels"
             xmlns:models="clr-namespace:ExpenseTracker.Models"
             xmlns:controls="clr-namespace:ExpenseTracker.Views.Controls"
             x:Class="ExpenseTracker.Views.DashboardPage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Refresh"
                     Command="{Binding RefreshCommand}"
                     IconImageSource="refresh.png"/>
    </ContentPage.ToolbarItems>

    <Grid>
        <!-- Loading indicator -->
        <ActivityIndicator IsVisible="{Binding IsLoading}"
                           IsRunning="{Binding IsLoading}"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"/>

        <!-- Error message -->
        <Frame IsVisible="{Binding HasError}"
               BackgroundColor="Red"
               Padding="16"
               Margin="16"
               VerticalOptions="Start">
            <Label Text="{Binding ErrorMessage}"
                   TextColor="White"
                   HorizontalTextAlignment="Center"/>
        </Frame>

        <!-- Content -->
        <ScrollView IsVisible="{Binding IsNotLoading}"
                Padding="16">
            <StackLayout Spacing="20">

                <!-- Gamification Quick Stats -->
                <Frame Padding="0"
                       CornerRadius="20"
                       HasShadow="True"
                       BorderColor="Transparent">
                    <Frame.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#6200EA" Offset="0.0" />
                            <GradientStop Color="#B388FF" Offset="1.0" />
                        </LinearGradientBrush>
                    </Frame.Background>
                    
                    <Grid RowDefinitions="Auto,Auto"
                          Padding="20"
                          RowSpacing="15">
                        <!-- Header with level info -->
                        <Grid Grid.Row="0"
                              ColumnDefinitions="Auto,*,Auto">
                            <Frame Padding="8"
                                   CornerRadius="12"
                                   BackgroundColor="White"
                                   HasShadow="False">
                                <Label Text="ðŸŽ®"
                                       FontSize="28"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center"/>
                            </Frame>
                            
                            <StackLayout Grid.Column="1"
                                       Margin="12,0,0,0"
                                       VerticalOptions="Center"
                                       Spacing="2">
                                <Label Text="{Binding GamificationProfile.Level, StringFormat='LEVEL {0}'}"
                                       TextColor="White"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       CharacterSpacing="1"/>
                                <Label Text="{Binding MotivationalMessage}"
                                       TextColor="White"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       LineBreakMode="TailTruncation"/>
                                <Label Text="{Binding BudgetHealthMessage}"
                                       TextColor="{Binding BudgetHealthColor}"
                                       FontSize="12"
                                       FontAttributes="Italic"
                                       LineBreakMode="TailTruncation"/>
                            </StackLayout>
                            
                            <Button Grid.Column="2"
                                    Text="QUESTS"
                                    Command="{Binding NavigateToGamificationCommand}"
                                    BackgroundColor="White"
                                    TextColor="#6200EA"
                                    FontSize="12"
                                    FontAttributes="Bold"
                                    Padding="16,8"
                                    CornerRadius="20"
                                    VerticalOptions="Center"
                                    HeightRequest="36"/>
                        </Grid>

                        <!-- Quick stats bar -->
                        <Grid Grid.Row="1"
                              ColumnDefinitions="*,*,*"
                              ColumnSpacing="12">
                            <!-- Points -->
                            <Frame BackgroundColor="#33FFFFFF"
                                   Padding="10"
                                   CornerRadius="15"
                                   BorderColor="Transparent"
                                   HasShadow="False">
                                <StackLayout HorizontalOptions="Center" Spacing="0">
                                    <Label Text="{Binding GamificationProfile.TotalPoints}"
                                           TextColor="White"
                                           FontSize="20"
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="Center"/>
                                    <Label Text="POINTS"
                                           TextColor="#E0E0E0"
                                           FontSize="10"
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="Center"/>
                                </StackLayout>
                            </Frame>
                            
                            <!-- Streak -->
                            <Frame Grid.Column="1"
                                   BackgroundColor="#33FFFFFF"
                                   Padding="10"
                                   CornerRadius="15"
                                   BorderColor="Transparent"
                                   HasShadow="False">
                                <StackLayout HorizontalOptions="Center" Spacing="0">
                                    <Label FontSize="20"
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="Center">
                                        <Label.Text>
                                            <MultiBinding StringFormat="{}{0} ðŸ”¥">
                                                <Binding Path="GamificationProfile.CurrentStreak"/>
                                            </MultiBinding>
                                        </Label.Text>
                                        <Label.TextColor>
                                            <Color>White</Color>
                                        </Label.TextColor>
                                    </Label>
                                    <Label Text="STREAK"
                                           TextColor="#E0E0E0"
                                           FontSize="10"
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="Center"/>
                                </StackLayout>
                            </Frame>
                            
                            <!-- Tracked -->
                            <Frame Grid.Column="2"
                                   BackgroundColor="#33FFFFFF"
                                   Padding="10"
                                   CornerRadius="15"
                                   BorderColor="Transparent"
                                   HasShadow="False">
                                <StackLayout HorizontalOptions="Center" Spacing="0">
                                    <Label Text="{Binding GamificationProfile.TotalExpensesTracked}"
                                           TextColor="White"
                                           FontSize="20"
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="Center"/>
                                    <Label Text="TRACKED"
                                           TextColor="#E0E0E0"
                                           FontSize="10"
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="Center"/>
                                </StackLayout>
                            </Frame>
                        </Grid>
                    </Grid>
                </Frame>

                <!-- Summary Cards -->
                <Grid ColumnDefinitions="*,*"
                        RowDefinitions="Auto"
                        ColumnSpacing="10">
                    <!-- Current Month Card -->
                    <Frame Grid.Column="0"
                            BackgroundColor="LightBlue"
                            Padding="16"
                            CornerRadius="8">
                        <StackLayout>
                            <Label Text="This Month"
                                    FontAttributes="Bold"
                                    FontSize="16"/>
                            <Label Text="{Binding CurrentMonthSummary.TotalExpenses, StringFormat='{0:C}'}"
                                   FontSize="24"
                                    FontAttributes="Bold"/>
                            <Label Text="{Binding CurrentMonthSummary.SubscriptionCount, StringFormat='Subscriptions: {0}'}"
                                   FontSize="12"/>
                            <Label Text="{Binding CurrentMonthSummary.InvoiceCount, StringFormat='Invoices: {0}'}"
                                   FontSize="12"/>
                        </StackLayout>
                    </Frame>

                    <!-- Current Year Card -->
                    <Frame Grid.Column="1"
                            BackgroundColor="LightGreen"
                            Padding="16"
                            CornerRadius="8">
                        <StackLayout>
                            <Label Text="This Year"
                                    FontAttributes="Bold"
                                    FontSize="16"/>
                            <Label Text="{Binding CurrentYearSummary.TotalExpenses, StringFormat='{0:C}'}"
                                   FontSize="24"
                                    FontAttributes="Bold"/>
                            <Label Text="{Binding CurrentYearSummary.TotalSubscriptions, StringFormat='Subscriptions: {0:C}'}"
                                   FontSize="12"/>
                            <Label Text="{Binding CurrentYearSummary.TotalInvoices, StringFormat='Invoices: {0:C}'}"
                                   FontSize="12"/>
                        </StackLayout>
                    </Frame>
                </Grid>

                <!-- Category Breakdown -->
                <Frame BackgroundColor="White"
                        Padding="16"
                        CornerRadius="8">
                    <StackLayout>
                        <Label Text="Category Breakdown"
                                FontAttributes="Bold"
                                FontSize="18"
                                Margin="0,0,0,10"/>
                        <CollectionView ItemsSource="{Binding CategoryBreakdown}"
                                HeightRequest="200">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:CategorySummary">
                                    <Grid ColumnDefinitions="*,Auto,Auto"
                                            Padding="8"
                                            RowSpacing="4">
                                        <Label Grid.Column="0"
                                                Text="{Binding Category}"
                                                FontSize="16"/>
                                        <Label Grid.Column="1"
                                                Text="{Binding TotalAmount, StringFormat='{0:C}'}"
                                               FontSize="16"
                                                FontAttributes="Bold"/>
                                        <Label Grid.Column="2"
                                                Text="{Binding Percentage, StringFormat='{0:P0}'}"
                                               FontSize="14"
                                                TextColor="Gray"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </Frame>

                <!-- Quick Actions -->
                <Grid ColumnDefinitions="*,*"
                        ColumnSpacing="10">
                    <Button Grid.Column="0"
                            Text="View Subscriptions"
                            Command="{Binding NavigateToSubscriptionsCommand}"
                            BackgroundColor="Blue"
                            TextColor="White"/>
                    <Button Grid.Column="1"
                            Text="View Invoices"
                            Command="{Binding NavigateToInvoicesCommand}"
                            BackgroundColor="Orange"
                            TextColor="White"/>
                </Grid>

                <!-- Recent Subscriptions -->
                <Frame BackgroundColor="White"
                        Padding="16"
                        CornerRadius="8">
                    <StackLayout>
                        <Label Text="Recent Subscriptions"
                                FontAttributes="Bold"
                                FontSize="18"
                                Margin="0,0,0,10"/>
                        <CollectionView ItemsSource="{Binding RecentSubscriptions}"
                                HeightRequest="150">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:Subscription">
                                    <Grid ColumnDefinitions="*,Auto,Auto"
                                            Padding="8"
                                            RowSpacing="4">
                                        <StackLayout Grid.Column="0">
                                            <Label Text="{Binding Name}"
                                                    FontSize="16"
                                                    FontAttributes="Bold"/>
                                            <Label Text="{Binding Provider}"
                                                    FontSize="14"
                                                    TextColor="Gray"/>
                                        </StackLayout>
                                        <Label Grid.Column="1"
                                                Text="{Binding Amount, StringFormat='{0:C}'}"
                                               FontSize="16"
                                                FontAttributes="Bold"
                                                VerticalOptions="Center"/>
                                        <Label Grid.Column="2"
                                                Text="{Binding BillingCycle}"
                                               FontSize="12"
                                                TextColor="Gray"
                                                VerticalOptions="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </Frame>

                <!-- Recent Invoices -->
                <Frame BackgroundColor="White"
                        Padding="16"
                        CornerRadius="8">
                    <StackLayout>
                        <Label Text="Recent Invoices"
                                FontAttributes="Bold"
                                FontSize="18"
                                Margin="0,0,0,10"/>
                        <CollectionView ItemsSource="{Binding RecentInvoices}"
                                HeightRequest="150">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:Invoice">
                                    <Grid ColumnDefinitions="*,Auto,Auto"
                                            Padding="8"
                                            RowSpacing="4">
                                        <StackLayout Grid.Column="0">
                                            <Label Text="{Binding InvoiceNumber}"
                                                    FontSize="16"
                                                    FontAttributes="Bold"/>
                                            <Label Text="{Binding Vendor}"
                                                    FontSize="14"
                                                    TextColor="Gray"/>
                                        </StackLayout>
                                        <Label Grid.Column="1"
                                                Text="{Binding Amount, StringFormat='{0:C}'}"
                                               FontSize="16"
                                                FontAttributes="Bold"
                                                VerticalOptions="Center"/>
                                        <Label Grid.Column="2"
                                                Text="{Binding Status}"
                                               FontSize="12"
                                                VerticalOptions="Center">
                                            <Label.Triggers>
                                                <DataTrigger TargetType="Label"
                                                        Binding="{Binding Status}"
                                                        Value="Paid">
                                                    <Setter Property="TextColor"
                                                            Value="Green"/>
                                                </DataTrigger>
                                                <DataTrigger TargetType="Label"
                                                        Binding="{Binding Status}"
                                                        Value="Overdue">
                                                    <Setter Property="TextColor"
                                                            Value="Red"/>
                                                </DataTrigger>
                                                <DataTrigger TargetType="Label"
                                                        Binding="{Binding Status}"
                                                        Value="Pending">
                                                    <Setter Property="TextColor"
                                                            Value="Orange"/>
                                                </DataTrigger>
                                            </Label.Triggers>
                                        </Label>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </Frame>

            </StackLayout>
        </ScrollView>

        <!-- Confetti Overlay -->
        <controls:ConfettiView x:Name="ConfettiOverlay"
                               InputTransparent="True"
                               VerticalOptions="Fill"
                               HorizontalOptions="Fill">
            <controls:ConfettiView.Triggers>
                <DataTrigger TargetType="controls:ConfettiView"
                             Binding="{Binding IsLevelUp}"
                             Value="True">
                    <Trigger.EnterActions>
                        <vm:StartConfettiAction TargetName="ConfettiOverlay"/>
                    </Trigger.EnterActions>
                </DataTrigger>
            </controls:ConfettiView.Triggers>
        </controls:ConfettiView>
    </Grid>
</ContentPage>