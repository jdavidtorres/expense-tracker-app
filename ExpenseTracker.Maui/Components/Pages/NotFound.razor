@page "/not-found"

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="py-5">
                <i data-lucide="search-x" class="text-muted mb-4" style="width: 96px; height: 96px;"></i>
                <h1 class="display-4 text-muted">404</h1>
                <h4 class="mb-3">Page Not Found</h4>
                <p class="text-muted mb-4">
                    Sorry, the page you are looking for doesn't exist or has been moved.
                </p>
                <a href="/" class="btn btn-primary">
                    <i data-lucide="home" class="me-1"></i>
                    Go to Dashboard
                </a>
            </div>
        </div>
    </div>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await Task.Delay(100);
            await JSRuntime.InvokeVoidAsync("expenseTracker.initializeIcons");
        }
    }
}

@inject IJSRuntime JSRuntime
