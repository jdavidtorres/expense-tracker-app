<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ExpenseTracker.Maui.ViewModels"
             x:Class="ExpenseTracker.Maui.Views.DashboardPage"
             x:DataType="vm:DashboardViewModel"
             Title="{Binding Title}">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            
            <!-- Loading Indicator -->
            <ActivityIndicator IsVisible="{Binding IsBusy}" 
                             IsRunning="{Binding IsBusy}"
                             HorizontalOptions="Center"
                             VerticalOptions="Start" />

            <!-- Error Message -->
            <Frame IsVisible="{Binding HasError}" 
                   BackgroundColor="LightCoral" 
                   Padding="15"
                   CornerRadius="5">
                <Label Text="{Binding ErrorMessage}" 
                       TextColor="White" 
                       FontSize="14" />
            </Frame>

            <!-- Header -->
            <Label Text="ðŸ“Š Dashboard" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" />

            <!-- Monthly Summary -->
            <Frame BackgroundColor="LightBlue" 
                   Padding="20" 
                   CornerRadius="10">
                <StackLayout>
                    <Label Text="{Binding CurrentMonth, StringFormat='{0:MMMM} {1} Summary', ConverterParameter={Binding CurrentYear}}" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center" />
                    
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="20" RowSpacing="10">
                        
                        <!-- Monthly Average -->
                        <Frame Grid.Row="0" Grid.Column="0" BackgroundColor="White" Padding="15" CornerRadius="8">
                            <StackLayout>
                                <Label Text="ðŸ“Š Monthly Average" FontSize="14" FontAttributes="Bold" />
                                <Label Text="{Binding MonthlyAverage, StringFormat='${0:F2}'}" 
                                       FontSize="16" TextColor="Blue" />
                            </StackLayout>
                        </Frame>

                        <!-- Yearly Total -->
                        <Frame Grid.Row="0" Grid.Column="1" BackgroundColor="White" Padding="15" CornerRadius="8">
                            <StackLayout>
                                <Label Text="ðŸ“ˆ Yearly Total" FontSize="14" FontAttributes="Bold" />
                                <Label Text="{Binding YearlyTotal, StringFormat='${0:F2}'}" 
                                       FontSize="16" TextColor="Green" />
                            </StackLayout>
                        </Frame>

                        <!-- Total Expenses (Backend Calculated) -->
                        <Frame Grid.Row="1" Grid.ColumnSpan="2" BackgroundColor="White" Padding="15" CornerRadius="8">
                            <StackLayout>
                                <Label Text="ðŸ’° Total Expenses" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center" />
                                <Label Text="{Binding TotalExpenses, StringFormat='${0:F2}'}" 
                                       FontSize="20" TextColor="Red" FontAttributes="Bold" HorizontalOptions="Center" />
                            </StackLayout>
                        </Frame>
                    </Grid>
                </StackLayout>
            </Frame>

            <!-- Recent Subscriptions -->
            <Frame BackgroundColor="LightGreen" Padding="15" CornerRadius="10">
                <StackLayout>
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0" Text="Recent Subscriptions" FontSize="16" FontAttributes="Bold" />
                        <Button Grid.Column="1" Text="View All" Command="{Binding NavigateToSubscriptionsCommand}" 
                                BackgroundColor="Transparent" TextColor="Blue" FontSize="12" />
                    </Grid>
                    
                    <CollectionView ItemsSource="{Binding Subscriptions}" MaximumHeightRequest="200">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="*,Auto" Padding="5" RowDefinitions="Auto,Auto">
                                    <Label Grid.Row="0" Grid.Column="0" Text="{Binding Name}" FontAttributes="Bold" />
                                    <Label Grid.Row="1" Grid.Column="0" Text="{Binding Category}" FontSize="12" TextColor="Gray" />
                                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding Amount, StringFormat='${0:F2}'}" 
                                           FontSize="14" TextColor="Blue" VerticalOptions="Center" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        <CollectionView.EmptyView>
                            <Label Text="No subscriptions found" HorizontalOptions="Center" TextColor="Gray" />
                        </CollectionView.EmptyView>
                    </CollectionView>
                </StackLayout>
            </Frame>

            <!-- Recent Invoices -->
            <Frame BackgroundColor="LightYellow" Padding="15" CornerRadius="10">
                <StackLayout>
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0" Text="Recent Invoices" FontSize="16" FontAttributes="Bold" />
                        <Button Grid.Column="1" Text="View All" Command="{Binding NavigateToInvoicesCommand}" 
                                BackgroundColor="Transparent" TextColor="Blue" FontSize="12" />
                    </Grid>
                    
                    <CollectionView ItemsSource="{Binding Invoices}" MaximumHeightRequest="200">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="*,Auto" Padding="5" RowDefinitions="Auto,Auto">
                                    <Label Grid.Row="0" Grid.Column="0" Text="{Binding Name}" FontAttributes="Bold" />
                                    <Label Grid.Row="1" Grid.Column="0" Text="{Binding DueDate, StringFormat='Due: {0:MMM dd}'}" FontSize="12" TextColor="Gray" />
                                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding Amount, StringFormat='${0:F2}'}" 
                                           FontSize="14" TextColor="Green" VerticalOptions="Center" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        <CollectionView.EmptyView>
                            <Label Text="No invoices found" HorizontalOptions="Center" TextColor="Gray" />
                        </CollectionView.EmptyView>
                    </CollectionView>
                </StackLayout>
            </Frame>

            <!-- Action Buttons -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Button Grid.Column="0" Text="ðŸ“Š View Reports" 
                        BackgroundColor="DodgerBlue" TextColor="White" 
                        Padding="15" CornerRadius="8" />
                <Button Grid.Column="1" Text="ðŸ”„ Refresh" 
                        Command="{Binding LoadDataCommand}"
                        BackgroundColor="ForestGreen" TextColor="White" 
                        Padding="15" CornerRadius="8" />
            </Grid>

        </StackLayout>
    </ScrollView>
</ContentPage>