<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ExpenseTracker.Maui.AppShellTabBar"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ExpenseTracker.Maui.Views"
    Title="Expense Tracker">

    <!-- Bottom TabBar Navigation - Microsoft's Material Design approach -->
    <TabBar>
        <ShellContent
            Title="Dashboard"
            Route="dashboard"
            ContentTemplate="{DataTemplate local:DashboardPage}">
            <ShellContent.Icon>
                <FontImageSource FontFamily="Icons" Glyph="ðŸ " Color="#2E86AB" Size="24" />
            </ShellContent.Icon>
        </ShellContent>

        <ShellContent
            Title="Subscriptions"
            Route="subscriptions"
            ContentTemplate="{DataTemplate local:SubscriptionsPage}">
            <ShellContent.Icon>
                <FontImageSource FontFamily="Icons" Glyph="ðŸ’³" Color="#2E86AB" Size="24" />
            </ShellContent.Icon>
        </ShellContent>

        <ShellContent
            Title="Invoices"
            Route="invoices"
            ContentTemplate="{DataTemplate local:InvoicesPage}">
            <ShellContent.Icon>
                <FontImageSource FontFamily="Icons" Glyph="ðŸ“„" Color="#2E86AB" Size="24" />
            </ShellContent.Icon>
        </ShellContent>
    </TabBar>

    <!-- Modern Material Design styles for TabBar -->
    <Shell.Resources>
        <Style TargetType="TabBar">
            <Setter Property="Shell.TabBarBackgroundColor" Value="White" />
            <Setter Property="Shell.TabBarForegroundColor" Value="#2E86AB" />
            <Setter Property="Shell.TabBarTitleColor" Value="#333333" />
            <Setter Property="Shell.TabBarUnselectedColor" Value="#9E9E9E" />
        </Style>

        <Style TargetType="ShellContent">
            <Setter Property="Shell.BackgroundColor" Value="#F8F9FA" />
        </Style>
        
        <!-- Tab item styling for Material Design look -->
        <Style TargetType="Shell" ApplyToDerivedTypes="True">
            <Setter Property="Shell.TabBarBackgroundColor" Value="White" />
            <Setter Property="Shell.TabBarForegroundColor" Value="#2E86AB" />
            <Setter Property="Shell.TabBarTitleColor" Value="#333333" />
            <Setter Property="Shell.TabBarUnselectedColor" Value="#9E9E9E" />
        </Style>
    </Shell.Resources>

</Shell>